@model OSPI.Infrastructure.Models.CandidateModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout_User_loggedIn.cshtml";
}

<br />

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-sm-4"> <h4>Edit Candidate</h4></div>
                    <div class="col-sm-4"></div>
                    <div class="col-sm-2"></div>
                    <div class="col-sm-2">
                        <div class="row">

                            <i class="fa fa-arrow-circle-left"></i>  <a asp-action="index">Back to  Candidate List</a>
                        </div>
                    </div>
                </div>

            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <b>
                                @Html.DisplayNameFor(model => model.CandidateFullName):
                            </b>
                            @Html.DisplayFor(model => model.CandidateFullName)
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <b>
                                @Html.DisplayNameFor(model => model.NomineeFullName):
                            </b>
                            @Html.DisplayFor(model => model.NomineeFullName)

                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">

                        <div class="form-group">
                            <b>
                                @Html.DisplayNameFor(model => model.PositionName):
                            </b>
                            @Html.DisplayFor(model => model.PositionName)

                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <b>
                                @Html.DisplayNameFor(model => model.Status):
                            </b>
                            @Html.DisplayFor(model => model.Status)

                        </div>
                    </div>
                </div>

                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="CandidateId" />
                    <input type="hidden" asp-for="CandidateMemberId" />
                    <input type="hidden" asp-for="PositionId" />
                    <input type="hidden" asp-for="NomineeMemberId" />
                    <input type="hidden" asp-for="RowVersion" />

                    <div class="row">
                        <div class="col-lg-6">

                            <div class="form-group">
                                @Html.DropDownListFor(model => model.Status, new SelectList(ViewBag.Status), new { @class = "form-control" })
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>

                        </div>
                        <!-- /.col-lg-6 (nested) -->
                        <div class="col-lg-6">
                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary pull-right" />
                            </div>

                        </div>
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                </form>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
 
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
