@model IEnumerable<OSPI.Infrastructure.Models.CandidateModel>

@{
    ViewData["Title"] = "ElectionResult";
    Layout = "~/Views/Shared/_Layout_User_loggedIn.cshtml";
}
  

<script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.3/dist/Chart.min.js"></script>
<br />
<script></script>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>Election Result </h4>
            </div>
            <div class="panel-body">

                <div class="row">
                    <div class="col-lg-6">
                        <div class="dataTable_wrapper table-responsive">
                            <table id="tbl_test" class="table table-striped table-bordered table-hover  display nowrap">
                                <thead>
                                    <tr>
                                        <th class="text-center">

                                        </th>

                                        <th>
                                            List of Canditates
                                        </th>

                                        <th>
                                            No of Votes
                                        </th>
                                        <th>
                                            No of Votes(%)
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        <tr class="odd gradeX">
                                            <td class="text-center">
                                                <input type="checkbox" value="1">
                                            </td>
                                            <td>
                                                <img src="@item.CandidateMemberNo" class="rounded-circle" height="40" width="40" asp-append-version="true" />
                                              
                                                @Html.DisplayFor(modelItem => item.CandidateFirstName)


                                            </td>
                                            <td>
                                                5
                                            </td>

                                            <td>
                                                6
                                            </td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                    <div class="col-lg-6">
                        <div class="form-group">
                            <canvas id="myChart" width="400" height="300"></canvas>
                        </div>

                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>



            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<script>
    $(function () {


        var chartDiv = $("#myChart");
        var myChart = new Chart(chartDiv, {
            type: 'pie',
            data: {
                labels: ["Diego Jr Benedictos", "Joy Benedictos", "Ajay Gujjar", "Ram"],
                datasets: [
                    {
                        data: [21, 39, 10, 14],
                        backgroundColor: [
                            "#FF6384",
                            "#4BC0C0",
                            "#FFCE56",
                            "#E7E9ED"

                        ]
                    }]
            },
            options: {
                title: {
                    display: true,
                    text: 'Election Result Chart'
                },
                responsive: true,
                maintainAspectRatio: false,
            }
        });
    });



</script>



