@model OSPI.Infrastructure.Models.CPositionModel

@{
    ViewData["Title"] = "Results";
    Layout = "~/Views/Shared/_Layout_User_loggedIn.cshtml";
}


<script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.3/dist/Chart.min.js"></script>
<br />

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-sm-4"><h4>Elections Dashboard</h4></div>
                    <div class="col-sm-6"></div>
                    <div class="col-sm-2">
                        <form action="Results" method="post">
                            <input type="hidden" value="@Model.PositionId" name="id" />
                            <input type="submit" value="<" id="btnPrev" name="ButtonType" />
                            <input type="submit" value=">" id="btnNext" name="ButtonType" />
                        </form>
                    </div>
                </div>
                @*<div class="row">
                        <div class="col-sm-4"> <h4>Election Result</h4></div>
                        <div class="col-sm-6">

                        </div>

                        <div class="col-sm-2">
                            <form action="" method="post">
                                <input type="hidden" value=" " name="id" />
                                <div class="col-sm-6">
                                    <input type="submit" value="<" id="btnPrev" name="ButtonType"class="btn-primary " />
                                </div>
                                <div class="col-sm-6">
                                    <input type="submit" value=">" id="btnNext" name="ButtonType" class="btn-primary "  />
                                    </div>
                            </form>
                        </div>
                    </div>*@
            </div>
            <div class="panel-body">

                <div class="row">
                    <div class="col-lg-6">
                        <div class="dataTable_wrapper table-responsive">
                            <p><b>@Model.PositionName</b></p>
                            <table id="" class="table table-striped table-bordered table-hover  display nowrap">
                                <thead>
                                    <tr>
                                        <th class="text-center">

                                        </th>

                                        <th>
                                            List of Canditates
                                        </th>

                                        <th>
                                            No of Votes
                                        </th>
                                        <th>
                                            No of Votes(%)
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model.Candidates)
                                    {
                                        <tr class="odd gradeX">
                                            <td class="text-center">
                                                <input type="checkbox" value="1">
                                            </td>
                                            <td>
                                                <img src="@item.MemberNumber" class="rounded-circle" height="40" width="40" asp-append-version="true" />
                                                @Html.DisplayFor(modelItem => item.CandidateName)

                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TotalVotes)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.Percentage)
                                            </td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                    <div class="col-lg-6">
                        <div class="form-group">
                            <canvas id="myChart" width="400" height="300"></canvas>
                        </div>

                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>



            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<script>
    $(function () {
       var chartDiv = $("#myChart");
          

         var myChart = new Chart(chartDiv, {
            type: 'pie',
             data: {
                 labels: JSON.parse('@Html.Raw(ViewBag.canditateNameList)'),

                datasets: [
                    {

                    data: JSON.parse('@Html.Raw(ViewBag.PercentageList)'), 
                        backgroundColor: [
                            "#FF6384",
                            "#4BC0C0",
                            "#FFCE56",
                            "#E7E9ED"

                        ]
                    }]
            },
            options: {
                title: {
                    display: true,
                    text: 'Election Result Chart'
                },
                responsive: true,
                maintainAspectRatio: false,
            }
        });
    });
</script>



