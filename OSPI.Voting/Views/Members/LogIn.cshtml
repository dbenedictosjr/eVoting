@model OSPI.Infrastructure.Models.LogInModel

<style>

    .form-top {
        padding: 10px 10px 10px 0;
        font-size: 1.5em;
        text-align: left;
    }
</style>

@using (Html.BeginForm())
{
    <div class="container body">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-4">

                    </div>
                    <div class="col-md-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3>Sign In</h3>
                            </div>
                            <div class="panel-body">
                                <div class="panel-red text-center text-danger">
                                    <h3>@Html.ValidationSummary()</h3>
                                </div>
                                <form asp-controller="Members" asp-action="Login" method="post" id="loginForm">
                                    <div class="form-group">
                                        <label asp-for="MemberNo"></label>
                                        <input asp-for="MemberNo" class="form-control" />
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Password">Password</label>
                                        <input asp-for="Password" type="password" class="form-control" />
                                    </div>
                                    <button type="submit" class="btn btn-primary btn-block">Login</button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">

                    </div>
                </div>
            </div>
        </div>
    </div>
}