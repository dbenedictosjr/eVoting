@model OSPI.Infrastructure.Models.RoleModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout_User_loggedIn.cshtml";
}
<br />
@if (!String.IsNullOrEmpty(ViewBag.Message)) 
{
    <h3 style="color:rebeccapurple">@ViewBag.Message</h3>
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-sm-4"> <h4>Create Roles</h4></div>
                    <div class="col-sm-4"></div>
                    <div class="col-sm-2"></div>
                    <div class="col-sm-2">
                        <div class="row">
                            <i class="fa fa-arrow-circle-left"></i>  <a asp-action="index">Back to  Roles List</a>
                        </div>
                    </div>
                </div>

            </div>
            <div class="panel-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="RoleId" />
                    <div class="row">
                        <div class="col-lg-6">

                            <div class="form-group">
                                <label asp-for="RoleName" class="control-label"></label>
                                <input asp-for="RoleName" class="form-control " />
                                <span asp-validation-for="RoleName" class="text-danger"></span>
                            </div>

                        </div>
                        <!-- /.col-lg-6 (nested) -->
                        <div class="col-lg-6">


                        </div>
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <div class="row">
                        <div class="col-lg-6">

                            <div class="form-group">

                                <label asp-for="Description" class="control-label"></label>
                                <input type="text" asp-for="Description" class="form-control " />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                        </div>
                        <!-- /.col-lg-6 (nested) -->
                        <div class="col-lg-6">


                        </div>
                        <!-- /.col-lg-6 (nested) -->
                    </div>

                    <div class="row">
                        <div class="col-lg-6">

                            <div class="form-group">
                                @Html.HiddenFor(Model => Model.RowVersion)
                            </div>

                        </div>
                        <!-- /.col-lg-6 (nested) -->
                        <div class="col-lg-6">
                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary pull-right" />
                            </div>

                        </div>
                        <!-- /.col-lg-6 (nested) -->
                    </div>

                </form>
                <br />
                <div class="row">
                    <div class="col-lg-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <div class="row">
                                    <div class="col-sm-4"> <h4>Claims</h4></div>
                                    <div class="col-sm-8"></div>
                                </div>
                            </div>
                            <div class="panel-body">
                                <div class="dataTable_wrapper table-responsive">
                                    <table id="tbl_Positions" class="table table-striped table-bordered table-hover  display nowrap">
                                        <thead>
                                            <tr>
                                                <th>
                                                    @Html.DisplayNameFor(Modelitem => Model.RoleAccesses.First().ModuleName)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(Modelitem => Model.RoleAccesses.First().CanAdd)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(Modelitem => Model.RoleAccesses.First().CanEdit)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(Modelitem => Model.RoleAccesses.First().CanView)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(Modelitem => Model.RoleAccesses.First().CanPrint)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(Modelitem => Model.RoleAccesses.First().CanDelete)
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.RoleAccesses)
                                            {
                                                <tr class="odd gradeX">
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.ModuleName)
                                                    </td>
                                                    <td>
                                                        @Html.EditorFor(modelItem => item.CanAdd)
                                                    </td>
                                                    <td>
                                                        @Html.EditorFor(modelItem => item.CanEdit)
                                                    </td>
                                                    <td>
                                                        @Html.EditorFor(modelItem => item.CanView)
                                                    </td>
                                                    <td>
                                                        @Html.EditorFor(modelItem => item.CanPrint)
                                                    </td>
                                                    <td>
                                                        @Html.EditorFor(modelItem => item.CanDelete)
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <!-- /.panel-body -->
                        </div>
                        <!-- /.panel -->
                    </div>
                    <!-- /.col-lg-12 -->
                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
 
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}