@model OSPI.Infrastructure.Models.BallotModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout_User_loggedIn.cshtml";
}
<br />
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-sm-4"> <h4>Ballot Details</h4></div>
                    <div class="col-sm-4"></div>
                    <div class="col-sm-2">

                    </div>
                    <div class="col-sm-2">
                        <div class="row">

                            <i class="fa fa-arrow-circle-left"></i>  <a asp-action="index">Back to  eBallots List</a>
                        </div>
                    </div>
                </div>

            </div>
            <div class="panel-body">


                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <b>
                                @Html.DisplayNameFor(model => model.RefCode):
                            </b>
                            @Html.DisplayFor(model => model.RefCode)

                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <b>
                                @Html.DisplayNameFor(model => model.Description):
                            </b>
                            @Html.DisplayFor(model => model.Description)
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <b>
                                @Html.DisplayNameFor(model => model.RegStartDate):
                            </b>
                            @Html.DisplayFor(model => model.RegStartDate)

                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <b>
                                @Html.DisplayNameFor(model => model.RegEndDate):
                            </b>
                            @Html.DisplayFor(model => model.RegEndDate)

                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <b>
                                @Html.DisplayNameFor(model => model.VotingStartDate):
                            </b>
                            @Html.DisplayFor(model => model.VotingStartDate)

                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <b>
                                @Html.DisplayNameFor(model => model.VotingEndDate):
                            </b>
                            @Html.DisplayFor(model => model.VotingEndDate)

                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <a asp-action="Edit" class="btn btn-primary pull-right" asp-route-id="@Model.BallotId"><i class="fa fa-edit" aria-hidden="true"></i> Edit</a>

                        </div>
                    </div>
                </div>

               
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-sm-4"> <h4>List of Positions</h4></div>
                   
                </div>

            </div>
            <div class="panel-body">
                <div class="dataTable_wrapper table-responsive">
                    <table id="tbl_Positions" class="table table-striped table-bordered table-hover  display nowrap">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(Modelitem => Model.Positions.First().PositionName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(Modelitem => Model.Positions.First().MinimumRequiredVotes)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(Modelitem => Model.Positions.First().MaximumRequiredVotes)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(Modelitem => Model.Positions.First().Qualifications)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Positions)
                            {
                            <tr class="odd gradeX">
                                <td>
                                    @Html.DisplayFor(modelItem => item.PositionName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MinimumRequiredVotes)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MaximumRequiredVotes)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Qualifications)
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
 