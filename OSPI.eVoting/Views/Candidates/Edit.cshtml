@model OSPI.Infrastructure.Models.CandidateModel

@{
    ViewData["Title"] = "Edit";
     Layout = "~/Views/Shared/_Layout_User_loggedIn.cshtml";
}

<h1>Edit</h1>

<h4>CandidateEntity</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CandidateID" />
            <div class="form-group">
                <label asp-for="PositionName" class="control-label"></label>
                <select asp-for="PositionID" class="form-control"
                        asp-items="ViewBag.Positions">
                    <option>Select Position</option>
                </select>
                <span asp-validation-for="PositionID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CandidateFullName" class="control-label"></label>
                <select asp-for="CandidateMemberID" class="form-control"
                        asp-items="ViewBag.Members">
                    <option>Select Candidate</option>
                </select>
                <span asp-validation-for="CandidateMemberID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomineeFullName" class="control-label"></label>
                <select asp-for="NomineeMemberID" class="form-control"
                        asp-items="ViewBag.Members">
                    <option>Select Nominee</option>
                </select>
                <span asp-validation-for="NomineeMemberID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
