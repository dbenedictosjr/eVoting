@model OSPI.Infrastructure.Models.ElectionModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout_User_loggedIn.cshtml";
}


<h1>Create</h1>

<h4>ElectionEntity</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form id="Election">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RefCode" class="control-label"></label>
                <input asp-for="RefCode" class="form-control" />
                <span asp-validation-for="RefCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegStartDate" class="control-label"></label>
                <input asp-for="RegStartDate" class="form-control" />
                <span asp-validation-for="RegStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegEndDate" class="control-label"></label>
                <input asp-for="RegEndDate" class="form-control" />
                <span asp-validation-for="RegEndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VotingStartDate" class="control-label"></label>
                <input asp-for="VotingStartDate" class="form-control" />
                <span asp-validation-for="VotingStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VotingEndDate" class="control-label"></label>
                <input asp-for="VotingEndDate" class="form-control" />
                <span asp-validation-for="VotingEndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="button" id="btnsubmit" value="Create" class="btn btn-primary pull-left" />
                <a asp-action="Index" class="btn btn-primary pull-left"><i class="fa fa-list" aria-hidden="true"></i> Back</a>
            </div>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-sm-4"> <h4> Positions</h4></div>
                    <div class="col-sm-4"></div>
                    <div class="col-sm-2"></div>
                    <div class="col-sm-2">

                        <button data-toggle="modal" data-target="#AddPositionModal" class="btn btn-primary pull-right"><i class="fa fa-plus"></i> Create New</button>

                    </div>
                </div>

            </div>
            <div class="panel-body">
                <div class="dataTable_wrapper table-responsive">
                    <table id="tbl_Positions" class="table table-striped table-bordered table-hover  display nowrap">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(Modelitem => Model.Positions.First().PositionName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(Modelitem => Model.Positions.First().RequiredCandidates)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Positions)
                            {
                            <tr class="odd gradeX">
                                <td>
                                    @Html.DisplayFor(modelItem => item.PositionName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RequiredCandidates)
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="modal fade" id="AddPositionModal" role="dialog">

    <!-- Begin Modal Dialog-->
    <div class="modal-dialog">

        <!-- Begin Modal Content-->
        <div class="modal-content">

            <!-- Begin Modal Header-->
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4>Add New Position</h4>
            </div>
            <!-- End Modal Header-->
            <!-- Begin Modal Body-->
            <div class="modal-body">
                <form role="form">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label for="PositionName">Position Name</label>
                                <input type="text" class="form-control" id="txtPosition" placeholder="Position">
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label for="RequiredCandidates">Required Candidates</label>
                                <input class="form-control" id="txtCandidates" placeholder="Candidates" type="number" >
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label for="Qualifications">Qualifications</label>
                                <input type="text" class="form-control" id="txtQualifications" placeholder="Qualifications">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <!-- End Modal Body-->
            <!-- Start Modal Footer-->
            <div class="modal-footer">
                <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancel</button>
                <button type="button" id="btnsave" class="btn btn-success pull-right">Save</button>
            </div>
            <!-- End Modal Footer-->

        </div>
        <!-- End Modal Content-->

    </div>
    <!-- End Modal Dialog-->

</div>
<script src="~/js/election.js"></script>