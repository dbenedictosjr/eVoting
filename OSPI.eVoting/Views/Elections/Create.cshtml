@model OSPI.Infrastructure.Models.ElectionModel

@{
    ViewData["Title"] = "Create";
     Layout = "~/Views/Shared/_Layout_User_loggedIn.cshtml";
}

<h1>Create</h1>

<h4>ElectionEntity</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <select asp-for="BallotId" class="form-control"
                        asp-items="ViewBag.Ballots">
                    <option>Select Ballot</option>
                </select>
                <span asp-validation-for="BallotId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateElectiond" class="control-label"></label>
                <input asp-for="DateElectiond" class="form-control" />
                <span asp-validation-for="DateElectiond" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <select asp-for="MemberId" class="form-control"
                        asp-items="ViewBag.Members">
                    <option>Select Member</option>
                </select>
                <span asp-validation-for="MemberId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

