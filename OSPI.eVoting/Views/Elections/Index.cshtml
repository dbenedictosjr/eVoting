@model IEnumerable<OSPI.Infrastructure.Models.ElectionModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout_User_loggedIn.cshtml";
}
<br />

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-sm-4"> <h4>eBallots Dashboard</h4></div>
                    <div class="col-sm-6"></div>

                    <div class="col-sm-2">
                        <a asp-action="Create" role="button" class="btn btn-primary pull-right"><i class="fa fa-plus"> </i> Create New</a>
                    </div>
                </div>

            </div>
            <div class="panel-body">
                <div class="dataTable_wrapper table-responsive">
                    <table id="tbl_eBallots" class="table table-striped table-bordered table-hover  display nowrap">
                        <thead>
                            <tr>
                                <th class="text-center">
                                    <input type="checkbox" value="1" id="chkeBallots_all">
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.RefCode)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.RegStartDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.RegEndDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.VotingStartDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.VotingEndDate)
                                </th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                            <tr class="odd gradeX">
                                <td class="text-center">
                                    <input type="checkbox" value="1">
                                </td>
 
                                <th> 
                                    @Html.ActionLink("" + item.RefCode + "", "Details", "Elections", new { id = item.ElectionID }, null)
                                </th>
                                <th>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </th>
                                <th>
                                    @Html.DisplayFor(modelItem => item.RegStartDate)
                                </th>
                                <th>
                                    @Html.DisplayFor(modelItem => item.RegEndDate)
                                </th>
                                <th>
                                    @Html.DisplayFor(modelItem => item.VotingStartDate)
                                </th>
                                <th>
                                    @Html.DisplayFor(modelItem => item.VotingEndDate)
                                </th>

                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
 