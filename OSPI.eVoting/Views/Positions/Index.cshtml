@model IEnumerable<OSPI.Infrastructure.Models.PositionModel>

@{
    ViewData["Title"] = "Index";
     Layout = "~/Views/Shared/_Layout_User_loggedIn.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RefCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegStartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegEndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VotingStartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VotingEndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PositionName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RequiredCandidates)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RefCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegStartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegEndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VotingStartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VotingEndDate)
            </td>
            <td>
                @Html.DisplayFor(model => item.PositionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequiredCandidates)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PositionId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PositionId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PositionId">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
