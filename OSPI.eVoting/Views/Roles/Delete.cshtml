@model OSPI.Infrastructure.Models.RoleModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout_User_loggedIn.cshtml";
}
<br />
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-sm-4"> <h4> Are you sure you want to delete this?</h4></div>
                    <div class="col-sm-4"></div>
                    <div class="col-sm-2">

                    </div>
                    <div class="col-sm-2">
                        <div class="row">

                            <i class="fa fa-arrow-circle-left"></i>  <a asp-action="index">Back to  Roles List</a>
                        </div>
                    </div>
                </div>

            </div>
            <div class="panel-body">

                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <b>
                                @Html.DisplayNameFor(model => model.RoleName):
                            </b>
                            @Html.DisplayFor(model => model.RoleName)

                        </div>
                    </div>
                    <div class="col-lg-6">
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <b>
                                @Html.DisplayNameFor(model => model.Description):
                            </b>
                            @Html.DisplayFor(model => model.Description)

                        </div>
                    </div>
                    <div class="col-lg-6">
                    </div>
                </div>


                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">

                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <div class="col-lg-8"></div>
                            <div class="col-lg-2">

                            </div>
                            <div class="col-lg-2">
                                <form asp-action="Delete">
                                    <input type="hidden" asp-for="RoleId" />
                                    <input type="submit" value="Delete" class="btn btn-danger pull-right" />

                                </form>

                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>
</div>

 