@model OSPI.Infrastructure.Models.RoleModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout_User_loggedIn.cshtml";
}
<br />
@if (!String.IsNullOrEmpty(ViewBag.Message))
{
    <h3 style="color:rebeccapurple">@ViewBag.Message</h3>
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-sm-4"> <h4> Role Details</h4></div>
                    <div class="col-sm-4"></div>
                    <div class="col-sm-2">

                    </div>
                    <div class="col-sm-2">
                        <div class="row">

                            <i class="fa fa-arrow-circle-left"></i>  <a asp-action="index">Back to  Roles List</a>
                        </div>
                    </div>
                </div>

            </div>
            <div class="panel-body">



                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <b>
                                @Html.DisplayNameFor(model => model.RoleName):
                            </b>
                            @Html.DisplayFor(model => model.RoleName)

                        </div>
                    </div>
                    <div class="col-lg-6">
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <b>
                                @Html.DisplayNameFor(model => model.Description):
                            </b>
                            @Html.DisplayFor(model => model.Description)

                        </div>
                    </div>
                    <div class="col-lg-6">
                    </div>
                </div>



                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">

                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <div class="col-lg-8"></div>
                            <div class="col-lg-2">
                                @*<a class="btn btn-danger pull-right" onclick="confirmDelete('@Url.Action("Delete", "Roles", new { id = @Model.RoleId })')" href="javascript:void(0)"><i class="fa fa-trash" aria-hidden="true"></i>  Delete</a>*@
                                <a asp-action="Delete" class="btn btn-danger pull-right" asp-route-id="@Model.RoleId"><i class="fa fa-trash" aria-hidden="true"></i> Delete</a>
                            </div>
                            <div class="col-lg-2">
                                <a asp-action="Edit" class="btn btn-primary pull-right" asp-route-id="@Model.RoleId"><i class="fa fa-edit" aria-hidden="true"></i> Edit</a>

                            </div>
                        </div>
                    </div>
                </div>

                <br />

                <div class="row">
                    <div class="col-lg-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <div class="row">
                                    <div class="col-sm-4"> <h4>Claims</h4></div>
                                    <div class="col-sm-8"></div>
                                </div>

                            </div>
                            <div class="panel-body">
                                <div class="dataTable_wrapper table-responsive">
                                    <table id="tbl_Positions" class="table table-striped table-bordered table-hover  display nowrap">
                                        <thead>
                                            <tr>
                                                <th>
                                                    @Html.DisplayNameFor(Modelitem => Model.RoleAccesses.First().ModuleName)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(Modelitem => Model.RoleAccesses.First().CanAdd)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(Modelitem => Model.RoleAccesses.First().CanEdit)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(Modelitem => Model.RoleAccesses.First().CanView)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(Modelitem => Model.RoleAccesses.First().CanPrint)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(Modelitem => Model.RoleAccesses.First().CanDelete)
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.RoleAccesses)
                                            {
                                                <tr class="odd gradeX">
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.ModuleName)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.CanAdd)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.CanEdit)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.CanView)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.CanPrint)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.CanDelete)
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <!-- /.panel-body -->
                        </div>
                        <!-- /.panel -->
                    </div>
                    <!-- /.col-lg-12 -->
                </div>


            </div>
        </div>
    </div>
</div>

<script>
    function confirmDelete(url) {
        var res = confirm("Do you really want to delete this Role?");
        if (res == true) {
            window.location.href = url;
        }
    }
</script>
