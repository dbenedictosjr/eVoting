@model OSPI.Infrastructure.Models.RoleModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout_User_loggedIn.cshtml";
}

<h1>Edit</h1>

<h4>RoleEntity</h4>

@if (!String.IsNullOrEmpty(ViewBag.Message))
{
    <h3 style="color:rebeccapurple">@ViewBag.Message</h3>
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RoleId" />
            <div class="form-group">
                <label asp-for="RoleName" class="control-label"></label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            @Html.HiddenFor(Model => Model.RowVersion)
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-sm-4"> <h4>Claims</h4></div>
                    <div class="col-sm-8"></div>
                </div>

            </div>
            <div class="panel-body">
                <div class="dataTable_wrapper table-responsive">
                    <table id="tbl_Positions" class="table table-striped table-bordered table-hover  display nowrap">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(Modelitem => Model.RoleAccesses.First().ModuleName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(Modelitem => Model.RoleAccesses.First().CanAdd)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(Modelitem => Model.RoleAccesses.First().CanEdit)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(Modelitem => Model.RoleAccesses.First().CanView)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(Modelitem => Model.RoleAccesses.First().CanPrint)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(Modelitem => Model.RoleAccesses.First().CanDelete)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.RoleAccesses)
                            {
                                <tr class="odd gradeX">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ModuleName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CanAdd)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CanEdit)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CanView)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CanPrint)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CanDelete)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}