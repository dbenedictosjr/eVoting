@using OSPI.eVoting.Helpers
@using OSPI.Infrastructure.Models
@model IEnumerable<OSPI.Infrastructure.Models.RoleModel>

@{
    ViewData["Title"] = "Index";
     Layout = "~/Views/Shared/_Layout_User_loggedIn.cshtml";
}

<h1>Index</h1>

<p>
    @if (UserClaimsHelper.CanDoAction(User, "Roles"+UserClaims.CanAdd))
    {
        <a asp-action="Create">Create New</a>
    }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RoleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RoleName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.RoleId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.RoleId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.RoleId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>