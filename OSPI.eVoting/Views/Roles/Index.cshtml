@using OSPI.eVoting.Helpers
@using OSPI.Infrastructure.Models
@model IEnumerable<OSPI.Infrastructure.Models.RoleModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout_User_loggedIn.cshtml";
}
<br />

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-sm-4"> <h4>Roles Dashboard</h4></div>
                    <div class="col-sm-6"></div>

                    <div class="col-sm-2">
                        @if (UserClaimsHelper.CanDoAction(User, "Roles" + UserClaims.CanAdd))
                        {
                            <a asp-action="Create" role="button" class="btn btn-primary pull-right"><i class="fa fa-plus"> </i> Create New</a>
                        }
                    </div>
                </div>

            </div>
            <div class="panel-body">
                <div class="dataTable_wrapper table-responsive">
                    <table id="tbl_Roles" class="table table-striped table-bordered table-hover  display nowrap">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.RoleName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                            <tr class="odd gradeX">
                               
                                <td>
                                    @Html.ActionLink("" + item.RoleName + "", "Details", "Roles", new { id = item.RoleId }, null)
                                </td> 
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>

                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

 