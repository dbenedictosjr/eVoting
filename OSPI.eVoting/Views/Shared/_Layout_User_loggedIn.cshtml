@using OSPI.eVoting.Helpers
@using OSPI.Infrastructure.Models

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OSPI Integrated System</title>
    <script src="https://kit.fontawesome.com/7dc7f2dcec.js" crossorigin="anonymous"></script>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/metisMenu.min.css" rel="stylesheet" />
    <link href="~/css/sb-admin-2.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.css">
    <script src="~/js/jquery.min.js"></script>
</head>
<body>

    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="index.html">Your Logo</a>
            </div>
            <!-- /.navbar-header -->

            <ul class="nav navbar-top-links navbar-right">
                <li class="current">
                    <a href="/"><span class="sr-only">(current)</span>Home</a>
                </li>
                <li class="">
                    <a href="/#aboutus">About</a>
                </li>
                <li class="">
                    <a href="/#focus">Services</a>
                </li>
                <li class="">
                    <a href="/#team">Board and Officers</a>
                </li>
                @{
                    await Html.RenderPartialAsync("_LoginPartial");
                }
            </ul>

            <!-- /.navbar-top-links -->

            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        <li class="sidebar-search">
                            <div class="input-group custom-search-form">
                                <input type="text" class="form-control" placeholder="Search...">
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="button">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </span>
                            </div>
                            <!-- /input-group -->
                        </li>
                        @if (UserClaimsHelper.CanDoAnyActions(User, "Roles") ||
                    UserClaimsHelper.CanDoAnyActions(User, "Members"))
                        {
                            <li>
                                <a href=""><i class="fa fa-dashboard fa-fw"></i>Tools <span class="fa arrow"></span></a>
                                <ul class="nav nav-second-level">
                                    @if (UserClaimsHelper.CanDoAnyActions(User, "Roles"))
                                    {
                                        <li>
                                            <a asp-controller="Roles" asp-action="index">Roles</a>
                                        </li>
                                    }
                                    @if (UserClaimsHelper.CanDoAnyActions(User, "Members"))
                                    {
                                        <li>
                                            <a asp-controller="Members" asp-action="index">Members </a>
                                        </li>
                                    }
                                </ul>
                            </li>
                        }
                        <li>
                            <a href=""><i class="fa fa-dashboard fa-fw"></i>Online Voting <span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                @if (UserClaimsHelper.CanDoAnyActions(User, "Election Settings"))
                                {
                                    <li>
                                        <a asp-controller="Members" asp-action="setting">Settings </a>
                                    </li>
                                }
                                @if (UserClaimsHelper.CanDoAnyActions(User, "Ballots"))
                                {
                                    <li>
                                        <a asp-controller="Ballots" asp-action="index">Ballot </a>
                                    </li>
                                }
                                @if (UserClaimsHelper.CanDoAnyActions(User, "Voters"))
                                {
                                    <li>
                                        <a asp-controller="Members" asp-action="voters">Voters </a>
                                    </li>
                                }
                                @if (UserClaimsHelper.CanDoAnyActions(User, "Nominations"))
                                {
                                    <li>
                                        <a asp-controller="Candidates" asp-action="Nomination">Nominations </a>
                                    </li>
                                }
                                @if (UserClaimsHelper.CanDoAnyActions(User, "Candidates"))
                                {
                                    <li>
                                        <a asp-controller="Candidates" asp-action="index">Candidates </a>
                                    </li>
                                }
                                <li>
                                    <a asp-controller="Elections" asp-action="index">Election </a>
                                </li>
                                @if (UserClaimsHelper.CanDoAnyActions(User, "Election Results"))
                                {
                                    <li>
                                        <a asp-controller="Elections" asp-action="ElectionResult">Election Results </a>
                                    </li>
                                }
                            </ul>
                        </li>
                        @*<li>
                            <a asp-controller="Members" asp-action="index"><i class="fa fa-money-check"></i>Cash Receipt </a>
                        </li>

                        <li>
                            <a asp-controller="Members" asp-action="index"><i class="fa fa-landmark"></i> Cash Disbursement </a>
                        </li>
                        <li>
                            <a asp-controller="Members" asp-action="index"><i class="fa fa-shopping-cart"></i>Journal Voucher</a>
                        </li>
                        <li>
                            <a asp-controller="Members" asp-action="index"><i class="fa fa-shopping-cart"></i>Petty Cash </a>
                        </li>*@
                    </ul>
                </div>
                <!-- /.sidebar-collapse -->
            </div>
            <!-- /.navbar-static-side -->
        </nav>
        <partial name="_CookieConsentPartial" />
        <!-- Page Content -->
        <div id="page-wrapper">
            <div class="container-fluid">
                @RenderBody()
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- /#page-wrapper -->

    </div>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script src="~/js/metisMenu.min.js"></script>
    <script src="~/js/sb-admin-2.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- #region datatables files -->
    <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.12/css/jquery.dataTables.min.css" />
    <script src="//cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>