@model OSPI.Infrastructure.Models.VoteModel

@{
    ViewData["Title"] = "Edit";
     Layout = "~/Views/Shared/_Layout_User_loggedIn.cshtml";
}

<h1>Edit</h1>

<h4>VoteEntity</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VoteId" />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <select asp-for="ElectionId" class="form-control"
                        asp-items="ViewBag.Elections">
                    <option>Select Election</option>
                </select>
                <span asp-validation-for="ElectionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateVoted" class="control-label"></label>
                <input asp-for="DateVoted" class="form-control" />
                <span asp-validation-for="DateVoted" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <select asp-for="MemberId" class="form-control"
                        asp-items="ViewBag.Members">
                    <option>Select Member</option>
                </select>
                <span asp-validation-for="MemberId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

